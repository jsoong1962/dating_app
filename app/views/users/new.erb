  <h1 class="main">Create an Account!</h1>

<% if flash[:error] %>
  <% flash[:error].each do |e|  %>
    <%= e %>
  <% end  %>
<% end  %>

<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %> <br>

  <%= f.label :username %>
  <%= f.text_field :username %> <br>

  <%= f.label :password %>
  <%= f.password_field :password %> <br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %> <br>

  <%= f.submit %>

  <% end %>
