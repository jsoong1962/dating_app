<%= form_for(current_user.active_relationships.build) do |f| %>
  <div><%= hidden_field_tag :matched_id, @user.id %></div>
  <%= f.submit "Match", class: "btn btn-primary" %>
<% end %>

<% unless current_user?(@user) %>

  <% if current_user.matching?(@user) %>
    <%= render 'unmatch' %>
  <% else %>
    <%= render 'match' %>
  <% end %>

<% end %>
